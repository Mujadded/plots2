<form id="inline_searchform" action=<%= all_search_path %> method="post" class="form" autocomplete="off">
  <div class="form-group form-inline">
    <input tabindex="1" id="inline_searchform_input" name="id" type="text" class="search-query typeahead form-control" data-provide="typeahead" value="<%= params[:id] %>">
    <button type="submit" class="btn btn-primary"><i class="fa fa-search fa fa-white"></i></button>
  </div>
</form>


<script type="text/javascript">	
    //Set up the _header search form submission
    $('#inline_searchform').submit(function(e){ 
      e.preventDefault()
      window.location = '/search/'+$('#inline_searchform_input').val()
    });
</script>